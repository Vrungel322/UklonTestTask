<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikita.uklontesttask.profile.ProfileActivity"
    >

  <TextView
      android:id="@+id/tvUserName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:text="tvUserName"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="16dp"
      />
  <TextView
      android:id="@+id/tvName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:text="tvName"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvUserName"
      android:layout_marginLeft="16dp"
      />
  <TextView
      android:id="@+id/tvEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:text="tvEmail"
      app:layout_constraintStart_toEndOf="@+id/tvUserName"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="8dp"
      />
  <TextView
      android:id="@+id/tvPhone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:text="tvPhone"
      app:layout_constraintStart_toEndOf="@+id/tvName"
      app:layout_constraintTop_toBottomOf="@+id/tvUserName"
      android:layout_marginLeft="16dp"
      />
  <TextView
      android:id="@+id/tvCompanyName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:text="tvCompanyName"
      app:layout_constraintStart_toEndOf="@+id/tvEmail"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="16dp"
      />
  <TextView
      android:id="@+id/tvWebsite"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:text="tvWebsite"
      app:layout_constraintStart_toEndOf="@+id/tvPhone"
      app:layout_constraintTop_toBottomOf="@+id/tvCompanyName"
      android:layout_marginLeft="16dp"
      />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rvComments"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="8dp"
      android:background="#ba9db6d4"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvName"
      />
</android.support.constraint.ConstraintLayout>
